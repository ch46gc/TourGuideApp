<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"/>
    <style name= "Theme" parent="AppTheme">
        <item name="colorPrimary">#4A312A</item>
        <item name="colorPrimaryDark">#2F1D1A</item>
        <item name="colorAccent">#000000</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="tabs">
        <item name="tabBackground">@color/primary_color</item>
        <item name="tabIndicatorColor">@color/primary_dark_color</item>
        <item name="tabSelectedTextColor">@color/primary_dark_color</item>
        <item name="tabTextAppearance">@style/tabsText</item>
    </style>
    <style name="tabsText" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>
